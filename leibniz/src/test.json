{
  "vars": {
    "r": "1",
    "theta0": "0",
    "theta1": "0",
    "theta2": "0",
    "phi0": "0",
    "phi1": "0.1",
    "phi2": "0.5",
    "omega00": "2 * PI",
    "omega01": "2 * PI / 2",
    "omega02": "2 * PI / 4",
    "omega10": "2 * PI / 0.3",
    "omega11": "2 * PI / 0.5",
    "omega12": "2 * PI / 0.7",
    "axis0": "e0",
    "axis1": "e1",
    "axis2": "e2"
  },
  "update": {
    "phi0": "phi0 + omega00 * dt",
    "phi1": "phi1 + omega01 * dt",
    "phi2": "phi2 + omega02 * dt",
    "theta0": "theta0 + omega10 * dt",
    "theta1": "theta1 + omega11 * dt",
    "theta2": "theta2 + omega12 * dt"
  },
  "corpses": [
    {
      "position": "r * cos(phi0) * e0 + r * sin(phi0) * e1",
      "rotation": "qrot(axis0 * theta0)"
    },
    {
      "position": "r * cos(phi1) * e0 + r * sin(phi1) * e1",
      "rotation": "qrot(axis1 * theta1)"
    },
    {
      "position": "r * cos(phi2) * e0 + r * sin(phi2) * e1",
      "rotation": "qrot(axis2 * theta2)"
    }
  ]
}